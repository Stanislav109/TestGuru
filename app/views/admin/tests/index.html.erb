<div class="">
	<p class="text-monospace" style="font-size: 50px">
    <%= t('.header') %>
  </p>
</div>

<p class="btn-outline-light">
  <%= link_to t('.create_link'), new_admin_test_path %>
</p>

<%= render 'shared/errors', resource: @test %>

<div class="table-bordered">
  <table class="table table-striped table-hover">
    <thead>
      <tr>
	      <th class="sort-by-title pointer">
          <%= t('.table.title') %>
          <%= octicon 'arrow-up', class: 'text-success hide' %>
          <%= octicon 'arrow-down', class: 'text-success hide' %>  
        </th>
	      <th><%= t('.table.level') %></th>
	      <th><%= t('.table.category') %></th>
	      <th><%= t('.table.question_count') %></th>
        <th colspan="3"><%= t('.table.actions') %></th>
      </tr>
    </thead>
    <tbody>
      <%= render @tests %>
    </tbody>
  </table>
</div>
